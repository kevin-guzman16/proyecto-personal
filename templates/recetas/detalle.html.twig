{% extends 'base.html.twig' %}

{% block title %}Hello RecetasController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">

            <h2>{{ receta.getNombre }}</h2>
            <div><img src="{{ absolute_url(asset('imgs/img_receta/'~receta.getImagenes)) }}"></div>
            <p>{{ receta.getDescripcion }}</p>
            <h3>Ingredientes: </h3>
            <p>{{ receta.getIngredientes |nl2br}}</p>
            <h3>Preparacion:</h3>
            <p>{{ receta.getPreparacion |nl2br}}</p>

    </div>
{% endblock %}